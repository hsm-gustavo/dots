{
  "position": "top",
  "layer": "top",
  "height": 45,
  "spacing": 0,
  "margin-top": 5,
  "margin-bottom": 0,
  "margin-left": 5,
  "margin-right": 5,
  "modules-left": ["custom/launcher", "hyprland/workspaces", "custom/updates"],
  "modules-center": ["cpu", "memory", "disk"],
  "modules-right": [
    "battery",
    "network",
    "pulseaudio",
    "clock",
    "custom/notifications",
    "tray",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
    "max-length": 35
  },
  "clock": {
    "format": "ÔÄó {:%d %a %H:%M}",
    //"format": "ÔÄó {:%a %b %d %Y | %H:%M}",
    "format-alt": "ÔÄó {:%a %b %d %Y (%V) | %r}",
    "tooltip": "true",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar-weeks-pos": "right",
    "today-format": "<span color='#f38ba8'><b><u>{}</u></b></span>",
    "format-calendar": "<span color='#f2cdcd'><b>{}</b></span>",
    "format-calendar-weeks": "<span color='#94e2d5'><b>W{:%U}</b></span>",
    "format-calendar-weekdays": "<span color='#f9e2af'><b>{}</b></span>"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "sort-by-number": true,
    "format-icons": {
      "active": "ÔÑë",
      "default": "ÔÑë"
    }
  },

  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{icon} {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },

  "memory": {
    "format": "Ôãõ {}%",
    "format-alt": "Û∞çõ {used}/{total} GiB",
    "interval": 5
  },

  "cpu": {
    "format": "Û∞ª† {usage}%",
    "format-alt": "Û∞ª† {avg_frequency} GHz",
    "interval": 5
  },

  "disk": {
    "format": "Û∞ãä {}%",
    "format-alt": "Û∞ãä {used}/{total} GiB",
    "interval": 5,
    "path": "/"
  },

  "network": {
    "format-wifi": "Û∞§®",
    "format-ethernet": "Ôõø {ifname}",
    "format-linked": "Ôõø {ifname} (No IP)",
    "format-disconnected": "Û∞§≠",
    "format-alt": "Ôõø {ifname}: {ipaddr}/{cidr}",
    "tooltip-format": "{essid}",
    "on-click-right": "nm-connection-editor"
  },

  "tray": {
    "icon-size": 16,
    "spacing": 5
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },
  "custom/launcher": {
    "format": "{}",
    "exec": "echo '{\"text\":\"üíß\"}'",
    "return-type": "json",
    "on-click": "pkill tofi || sleep 0.15 && tofi-drun -c ~/.config/tofi/tofi.launcher.conf",
    "on-click-right": "pkill tofi || sleep 0.15 && tofi-run -c ~/.config/tofi/tofi.launcher.conf"
  },
  "custom/notifications": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.15 && swaync-client -t -sw",
    "on-click-right": "sleep 0.15 && swaync-client -d -sw",
    "escape": true
  },
  "custom/updates": {
    "format": "{}",
    "exec": "~/.scripts/updates",
    "on-click": "~/.scripts/updates update",
    "interval": 600,
    "tooltip": true
  }
}
